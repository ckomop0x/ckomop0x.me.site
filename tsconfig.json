{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es2019"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "components/*": [
        "components/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "styles/*": [
        "styles/*"
      ]
    },
    "plugins": [
      {
        "name": "ts-graphql-plugin"
      }
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
