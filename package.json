{
  "name": "ckomop0x-me-site",
  "version": "9.0.34",
  "description": "Pavel Klochkov personal blog â€” ckomop0x.me",
  "keywords": [
    "nextjs",
    "graphql",
    "strapi",
    "tailwind"
  ],
  "author": {
    "name": "Pavel Klochkov",
    "email": "paul.klochkov@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://ckomop0x.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckomop0x/ckomop0x.me.site.v2"
  },
  "type": "module",
  "scripts": {
    "predev": "npm run gen",
    "dev": "next dev --turbopack -p 8000",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.mjs",
    "start": "next start",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --passWithNoTests --coverage",
    "check-style": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-ts": "tsc",
    "lint": "eslint \"./src/**/*.{ts,tsx,js}\" --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "gen": "npm run introspect && npm run codegen",
    "introspect": "node scripts/introspect.js",
    "graphql:gen-types": "apollo codegen:generate --localSchemaFile=schema.graphql --target=typescript --includes='src/queries/**/*.gql.ts' --tagName=gql --addTypename types",
    "rover": "rover",
    "dotenv": "dotenv",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,csgis,md}": [
      "prettier . --write --config ./.prettierrc"
    ],
    "*.{ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "dependencies": {
    "@apollo/client": "3.13.8",
    "@apollo/rover": "0.33.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "graphql": "^16.8.1",
    "html-react-parser": "^5.1.10",
    "lucide-react": "^0.518.0",
    "next": "15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.0.0",
    "tailwind-merge": "^3.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.29.0",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/client-preset": "4.8.2",
    "@graphql-codegen/introspection": "4.0.3",
    "@storybook/addon-docs": "9.0.12",
    "@storybook/addon-links": "9.0.12",
    "@storybook/addon-themes": "9.0.12",
    "@storybook/nextjs": "9.0.12",
    "@tailwindcss/postcss": "4.1.10",
    "@types/react": "19.1.8",
    "@vitejs/plugin-react": "4.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "dotenv-cli": "8.0.0",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.5.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.0.12",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.2",
    "next-sitemap": "4.2.3",
    "postcss": "8.5.6",
    "prettier": "3.5.3",
    "storybook": "9.0.12",
    "tailwindcss": "4.1.10",
    "ts-graphql-plugin": "4.0.3",
    "tsconfig-paths-webpack-plugin": "4.2.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "overrides": {
    "eslint": "$eslint",
    "@types/react": "19.1.8",
    "storybook": "$storybook"
  }
}
