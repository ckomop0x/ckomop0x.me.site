{
  "name": "ckomop0x-me-site-v2",
  "version": "7.0.50",
  "description": "Pavel Klochkov personal blog â€” ckomop0x.me",
  "keywords": [
    "nextjs",
    "graphql",
    "strapi",
    "tailwind"
  ],
  "author": {
    "name": "Pavel Klochkov",
    "email": "paul.klochkov@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://ckomop0x.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckomop0x/ckomop0x.me.site.v2"
  },
  "type": "commonjs",
  "scripts": {
    "predev": "npm run gen",
    "dev": "next dev -p 8000",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "test": "jest --env=jsdom --ci --verbose --passWithNoTests",
    "check-style": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-ts": "tsc",
    "lint": "eslint \"./src/**/*.{ts,tsx,js}\" --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "gen": "npm run graphql:get-schema && npm run codegen",
    "graphql:get-schema": "dotenv cross-var rover graph introspect %NEXT_PUBLIC_GRAPHQL_URL_LOCAL% > schema.graphql",
    "graphql:gen-types": "apollo codegen:generate --localSchemaFile=schema.graphql --target=typescript --includes='src/queries/**/*.gql.ts' --tagName=gql --addTypename types",
    "rover": "rover",
    "dotenv": "dotenv",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,csgis,md}": [
      "prettier . --write --config ./.prettierrc"
    ],
    "*.{ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.10.1",
    "@apollo/rover": "^0.27.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@storybook/addon-actions": "^8.0.9",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/react": "^8.0.9",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^10.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "graphql": "^16.8.1",
    "html-react-parser": "^5.1.10",
    "jest-environment-jsdom": "^29.7.0",
    "lucide-react": "^0.479.0",
    "next": "^14.2.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.0.0",
    "tailwind-merge": "^3.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/eslintrc": "3.3.0",
    "@eslint/js": "9.22.0",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/introspection": "4.0.3",
    "@storybook/nextjs": "8.6.4",
    "autoprefixer": "10.4.21",
    "babel-jest": "29.7.0",
    "babel-loader": "9.2.1",
    "cross-env": "7.0.3",
    "cross-var": "1.1.0",
    "dotenv": "16.4.7",
    "dotenv-cli": "8.0.0",
    "eslint": "9.22.0",
    "eslint-plugin-storybook": "0.11.4",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.4.3",
    "next-sitemap": "4.2.3",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "storybook": "8.6.4",
    "tailwindcss": "3.4.17",
    "ts-graphql-plugin": "4.0.3",
    "ts-jest": "29.2.6",
    "tsconfig-paths-webpack-plugin": "4.2.0",
    "typescript": "5.7.3"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
