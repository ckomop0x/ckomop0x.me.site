{
  "name": "ckomop0x-me-site-v2",
  "version": "3.1.4",
  "description": "Ckomop0x.me site",
  "author": "Pavel Klochkov, paul.klochkov@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "next dev -p 8000",
    "build": "next build",
    "start": "next start",
    "test": "jest --env=jsdom --ci --verbose --passWithNoTests",
    "pretty": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-ts": "tsc",
    "lint": "eslint \"./src/**/*.{ts,tsx,js}\" --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "gen": "yarn graphql:get-schema && yarn graphql:gen-types",
    "graphql:get-schema": "dotenv cross-var rover graph introspect https://ckme-admin.herokuapp.com/graphql > schema.graphql",
    "graphql:gen-types": "apollo codegen:generate --localSchemaFile=schema.graphql --target=typescript --includes='src/queries/*.gql.ts' --tagName=gql --addTypename types",
    "rover": "rover",
    "apollo": "apollo"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,csgis,md}": [
      "prettier --config ./.prettierrc --write"
    ],
    "*.{ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.4.15",
    "@apollo/rover": "^0.1.9",
    "apollo": "^2.33.6",
    "babel-plugin-styled-components": "^1.13.2",
    "bootstrap": "^4.6.0",
    "date-fns": "^2.23.0",
    "lazysizes": "^5.3.2",
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/react": "^6.3.6",
    "@types/enzyme": "^3.10.9",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.24",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-react-parser": "^1.2.7",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "ts-graphql-plugin": "^2.1.3",
    "ts-jest": "^27.0.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.3"
  }
}
