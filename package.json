{
  "name": "ckomop0x-me-site-v2",
  "version": "6.0.8",
  "description": "Pavel Klochkov personal blog â€” ckomop0x.me",
  "keywords": [
    "nextjs",
    "graphql",
    "strapi",
    "emotion"
  ],
  "author": {
    "name": "Pavel Klochkov",
    "email": "paul.klochkov@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://ckomop0x.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckomop0x/ckomop0x.me.site.v2"
  },
  "scripts": {
    "predev": "yarn gen",
    "start:server": "cd ../ckomop0x.me.admin.site && yarn dev",
    "dev": "next dev -p 8000",
    "build": "next build",
    "start": "next start",
    "test": "jest --env=jsdom --ci --verbose --passWithNoTests",
    "check-style": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-ts": "tsc",
    "lint": "eslint \"./src/**/*.{ts,tsx,js}\" --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "gen": "yarn graphql:get-schema && yarn graphql:gen-types",
    "graphql:get-schema": "dotenv cross-var rover graph introspect %NEXT_PUBLIC_GRAPHQL_URL_LOCAL% > schema.graphql",
    "graphql:gen-types": "apollo codegen:generate --localSchemaFile=schema.graphql --target=typescript --includes='src/queries/**/*.gql.ts' --tagName=gql --addTypename types",
    "rover": "rover",
    "apollo": "apollo",
    "dotenv": "dotenv"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,csgis,md}": [
      "prettier --config ./.prettierrc --write"
    ],
    "*.{ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@apollo/rover": "^0.8.1",
    "@babel/core": "^7.18.10",
    "@emotion/babel-plugin": "^11.10.0",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^28.1.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "apollo": "^2.34.0",
    "babel-plugin-styled-components": "^2.0.7",
    "bootstrap": "^4.6.1",
    "date-fns": "^2.29.1",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-react-parser": "^3.0.1",
    "jest-environment-jsdom": "^28.1.3",
    "next": "^12.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^3.2.0",
    "@netlify/plugin-nextjs": "^4.14.1",
    "@netlify/plugin-sitemap": "^0.8.1",
    "babel-jest": "^28.1.3",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.21.0",
    "eslint-plugin-storybook": "^0.6.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-graphql-plugin": "^2.1.6",
    "ts-jest": "^28.0.7",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
