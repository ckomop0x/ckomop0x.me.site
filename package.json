    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check-ts && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,csgis,md}": [
      "prettier --config ./.prettierrc --write"
    ],
    "*.{ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
